@import "./styles/iconfont.wxss";
/*小程序不支持通配符，所以需要把所有可能用到的标签都初始化一下*/
page,view,text,swiper,swiper-item,image,navigator {
    padding:0;
    margin:0;
    box-sizing: border-box;
}
/*
主题颜色通过变量来实现
1 less中存在变量这个知识
2 原生的css和wxss也是支持变量
*/
page{
    /* 定义主题颜色 */
    --themeColor:#eb4450;
    /*
    假设有一个设计稿是375px
    那么就会有1px=2rpx
    字体如果是14px就是28rpx
    */
    font-size: 28rpx;
}
/*一般小程序里图片的宽度都是100%所以在全局的wxss文件里直接指定全局image是100%*/
image{
    width: 100%;
}
